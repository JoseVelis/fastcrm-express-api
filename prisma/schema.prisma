generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id        Int      @id @default(autoincrement())
  name      String
  ruc       String
  createdAt DateTime @default(now())
  contacts  Contact[]
}

model Contact {
  id        Int     @id @default(autoincrement())
  name      String
  whatsapp  String
  createdAt DateTime @default(now())
  companyId Int?
  company   Company? @relation(fields: [companyId], references: [id])
}

